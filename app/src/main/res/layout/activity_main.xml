


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:background="@drawable/bg_coding_tasks">

        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODING TASK"
            android:layout_gravity="center_horizontal|center_vertical"

            android:id="@+id/textView"
            android:textSize="35sp"
            android:textColor="#ffffff"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/btn_main_chat"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_main_chat"
            android:onClick="onChatButtonClicked" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/btn_main_login"
            android:background="@drawable/btn_main_login"
            android:onClick="onLoginButtonClicked" />
        <ImageButton
            android:layout_width="wrap_content"

            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/btn_main_animate"
            android:background="@drawable/btn_main_animation"
            android:onClick="onAnimationTestButtonClicked"
            android:nestedScrollingEnabled="true"
            android:longClickable="true" />
    </LinearLayout>
